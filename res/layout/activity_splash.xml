<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_splash_background" >

    <ImageView
        android:id="@+id/activity_splash_logo_iv"
        android:layout_width="@dimen/activity_splash_logo_width"
        android:layout_height="@dimen/activity_splash_logo_height"
        android:layout_centerInParent="true"
        android:contentDescription="@string/activity_splash_logo_content_description" />

    <LinearLayout
        android:id="@+id/activity_splash_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/activity_splash_loading_margin_bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:id="@+id/activity_splash_loading_image"
            android:layout_width="@dimen/activity_splash_loading_image_size"
            android:layout_height="@dimen/activity_splash_loading_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_splash_loading_image_margin"
            android:background="@drawable/p_progress_dialog_image_mini" />

        <TextView
            android:id="@+id/activity_splash_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/activity_splash_loading"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>