<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/activity_search_box"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@null"
        android:ellipsize="middle"
        android:gravity="center"
        android:hint="@string/activity_search_searchbox_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:lines="1"
        android:paddingEnd="@dimen/actionbar_icon_padding_left"
        android:textAlignment="gravity"
        android:textColor="@android:color/white"
        android:textColorHint="@color/action_bar_text_hint"
        android:textSize="@dimen/actionbar_text_size" >
    </EditText>

    <ImageButton
        android:id="@+id/activity_search_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/action_bar_btn_bg"
        android:contentDescription="@string/activity_search_searchbutton_content_description"
        android:focusable="true"
        android:paddingEnd="@dimen/actionbar_icon_padding_left"
        android:src="@drawable/ic_menu_search" />

</LinearLayout>