<?xml version="1.0" encoding="utf-8"?>
<!-- COPY V LARGE-LAND lebo ho prebijal LARGE layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/activity_tutorial_padding" >

    <sk.gryfonnlair.priznaj.view.ui.AdaptHeightImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_report_image_margin"
        android:layout_weight="1"
        android:contentDescription="@string/activity_report_imageview_idea_description"
        android:src="@drawable/activity_report_idea_icon" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_report_padding" >

            <TextView
                android:id="@+id/activity_report_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="@dimen/activity_report_label_padding"
                android:text="@string/activity_report_label"
                android:textSize="@dimen/activity_report_label" />

            <TextView
                android:id="@+id/activity_report_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="@dimen/activity_report_text_padding"
                android:text="@string/activity_report_text"
                android:textSize="@dimen/activity_report_text" />

            <Button
                android:id="@+id/activity_report_button_send"
                style="@style/PButton"
                android:text="@string/activity_report_button_text" />

            <TextView
                android:id="@+id/activity_report_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="@dimen/activity_report_text_padding"
                android:text="@string/activity_report_text2"
                android:textSize="@dimen/activity_report_text" />

            <Button
                android:id="@+id/activity_report_button_send2"
                style="@style/PButton"
                android:text="@string/activity_report_button_text2" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>